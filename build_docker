FROM netboxcommunity/netbox:v4.4.5

COPY . /opt/plugins/netbox-bussiness-application/
ENV PYTHONPATH="/opt/plugins/netbox-bussiness-application"
RUN echo 'PLUGINS = ["business_application"]' >> /opt/netbox/netbox/netbox/configuration.py

ENV DEVELOPER=true

CMD ["python", "/opt/netbox/netbox/manage.py", "makemigrations", "business_application"]